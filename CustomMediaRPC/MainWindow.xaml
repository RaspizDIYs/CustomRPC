<ui:FluentWindow x:Class="CustomMediaRPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomMediaRPC"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Media To Discord" Height="300" Width="450" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True" WindowCornerPreference="Round" WindowBackdropType="Mica">
    <DockPanel>
        <ui:TitleBar DockPanel.Dock="Top"
                     Title="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type ui:FluentWindow}}}"
                     ShowMaximize="False"
                     ShowMinimize="True" />
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Верхняя строка с кнопкой темы -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,5">
                <ui:Button x:Name="ThemeCycleButton" 
                           Icon="WeatherMoon24" 
                           Click="ThemeCycleButton_Click" 
                           Appearance="Transparent" 
                           BorderThickness="0"
                           Background="Transparent"
                           ToolTip="Сменить тему"/>
            </StackPanel>
     
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,5,0,5">
                <ui:TextBlock Text="Select Media Source:" Margin="5,0" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="SessionComboBox"
                              Width="350"
                              SelectionChanged="SessionComboBox_SelectionChanged" Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5,5,0,5">
                    <ui:Button x:Name="ConnectButton" Content="Connect" Width="100" Margin="0,0,5,0" Click="ConnectButton_Click" Appearance="Primary" IsEnabled="False"/>
                    <ui:Button x:Name="DisconnectButton" Content="Disconnect" Width="100" Click="DisconnectButton_Click" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>

            <ui:TextBlock Grid.Row="2" x:Name="StatusTextBlock" Text="Initializing..." Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Style="{StaticResource CaptionTextBlockStyle}"/>
            
            <!-- Нижняя строка -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,5,0,5">
                <TextBlock Margin="0,0,10,0" VerticalAlignment="Center">
                    <Hyperlink Foreground="{DynamicResource TextFillColorSecondaryBrush}" Click="DevelopersHyperlink_Click">
                        Разработчики
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
       
    </DockPanel>
</ui:FluentWindow>
