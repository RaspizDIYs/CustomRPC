<Window x:Class="CustomMediaRPC.Views.FloatingPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Floating Player"
        Width="230"
        Height="80"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">
    <Border Background="#DD222222" CornerRadius="5" BorderThickness="1" BorderBrush="#55FFFFFF" Padding="2">
        <Grid Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Обложка -->
            <Border Grid.Row="0" Grid.Column="0" Width="50" Height="50" CornerRadius="4" Margin="0,0,8,0" Background="#333333">
                <Image x:Name="CoverArtImage" Stretch="UniformToFill">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="4" RadiusY="4" Rect="0,0,50,50"/>
                    </Image.Clip>
                </Image>
            </Border>

            <!-- Название, Артист и Кнопки -->
            <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="TitleTextBlock"
                           Text="Unknown Title"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="12"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,1"/>
                <TextBlock x:Name="ArtistTextBlock"
                           Text="Unknown Artist"
                           Foreground="#BBBBBB"
                           FontSize="11"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,3"/>
                <!-- Кнопки управления -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="PreviousButton"
                            Click="PreviousButton_Click"
                            Width="22" Height="22" Margin="0,0,5,0"
                            Padding="0" BorderThickness="0" Background="Transparent">
                        <ui:SymbolIcon Symbol="Previous20" Foreground="White"/>
                    </Button>
                    <Grid Width="22" Margin="5,0,5,0">
                        <Button x:Name="PlayPauseButton"
                                Click="PlayPauseButton_Click"
                                Width="22" Height="22"
                                Padding="0" BorderThickness="0" Background="Transparent">
                            <ui:SymbolIcon x:Name="PlayPauseIcon" Symbol="Play20" Foreground="White"/>
                        </Button>
                    </Grid>
                    <Button x:Name="NextButton"
                            Click="NextButton_Click"
                            Width="22" Height="22" Margin="5,0,0,0"
                            Padding="0" BorderThickness="0" Background="Transparent">
                        <ui:SymbolIcon Symbol="Next20" Foreground="White"/>
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- Прогресс Бар -->
            <ProgressBar x:Name="TrackProgressBar"
                         Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                         Height="4"
                         Margin="0,6,0,0"
                         Background="#66333333"
                         Foreground="#AAFFFFFF"
                         BorderThickness="0"
                         Minimum="0"
                         Maximum="100" />
        </Grid>
    </Border>
</Window> 