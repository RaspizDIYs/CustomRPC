<Window x:Class="CustomMediaRPC.Views.FloatingPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Floating Player"
        Width="250"
        Height="80"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">
    <Border Background="#DD222222" CornerRadius="5" BorderThickness="1" BorderBrush="#55FFFFFF" Padding="5">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Обложка (в круге) -->
            <Border Grid.Column="0"
                    Width="50"
                    Height="50"
                    CornerRadius="25"
                    Margin="0,0,10,0"
                    Background="#555555">
                <Border.Clip>
                    <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
                </Border.Clip>
                <Image x:Name="CoverArtImage"
                       Stretch="UniformToFill"/>
            </Border>

            <!-- Название, Артист и Кнопки -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <TextBlock x:Name="TitleTextBlock"
                           Text="Unknown Title"
                           Foreground="White"
                           FontWeight="SemiBold"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,2"/>
                <TextBlock x:Name="ArtistTextBlock"
                           Text="Unknown Artist"
                           Foreground="#CCCCCC"
                           FontSize="11"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="PreviousButton"
                            Click="PreviousButton_Click"
                            Width="25" Height="25" Margin="0,0,5,0"
                            Padding="0" BorderThickness="0" Background="Transparent">
                        <ui:SymbolIcon Symbol="Previous24" Foreground="White"/>
                    </Button>
                    <Grid Width="25" Margin="15,0,15,0">
                        <Button x:Name="PlayPauseButton"
                                Click="PlayPauseButton_Click"
                                Width="25" Height="25"
                                Padding="0" BorderThickness="0" Background="Transparent">
                            <ui:SymbolIcon x:Name="PlayPauseIcon" Symbol="Play24" Foreground="White"/>
                        </Button>
                    </Grid>
                    <Button x:Name="NextButton"
                            Click="NextButton_Click"
                            Width="25" Height="25" Margin="5,0,0,0"
                            Padding="0" BorderThickness="0" Background="Transparent">
                        <ui:SymbolIcon Symbol="Next24" Foreground="White"/>
                    </Button>
                </StackPanel>

                <ProgressBar x:Name="TrackProgressBar"
                             Height="5"
                             Margin="0,8,0,0"
                             Background="#444444"
                             Foreground="#FF7F00"
                             BorderThickness="0"
                             Minimum="0"
                             Maximum="100" />
            </StackPanel>
        </Grid>
    </Border>
</Window> 