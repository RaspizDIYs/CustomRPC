<ui:FluentWindow x:Class="CustomMediaRPC.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomMediaRPC.Views"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MediaPresence"
        Height="500" Width="400" 
        MinHeight="420" MinWidth="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True" WindowCornerPreference="Round" WindowBackdropType="Mica"
        StateChanged="MainWindow_StateChanged">

    <ui:FluentWindow.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </ui:FluentWindow.Resources>

    <DockPanel>
        <tb:TaskbarIcon
            x:Name="MyNotifyIcon"
            IconSource="/favicon.ico"
            ToolTipText="MediaPresence"
            TrayMouseDoubleClick="NotifyIcon_TrayMouseDoubleClick"
            Visibility="Collapsed">

            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Показать" Click="MenuItemShow_Click"/>
                    <Separator/>
                    <MenuItem Header="Выход" Click="MenuItemExit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        
        <ui:TitleBar DockPanel.Dock="Top"
                     Margin="-15,-2,0,0" 
                     Title="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type ui:FluentWindow}}}"
                     ShowMaximize="False"
                     ShowMinimize="True">
        </ui:TitleBar>
        <Grid Margin="10,0,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,5,0,5">
                <ui:TextBlock Text="Select Media Source:" Margin="5,0" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="SessionComboBox"
                              Width="350"
                              SelectionChanged="SessionComboBox_SelectionChanged" Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5,5,0,5">
                    <ui:Button x:Name="ConnectButton" Content="Connect" Width="100" Margin="0,0,5,0" Click="ConnectButton_Click" Appearance="Primary" IsEnabled="False"/>
                    <ui:Button x:Name="DisconnectButton" Content="Disconnect" Width="100" Click="DisconnectButton_Click" IsEnabled="False"/>
                    <ui:Button x:Name="ThemeCycleButton" 
                               Icon="WeatherMoon24" 
                               Click="ThemeCycleButton_Click" 
                               Appearance="Transparent" 
                               BorderThickness="0"
                               Background="Transparent"
                               ToolTip="Сменить тему"
                               Margin="130,0,0,0"/>
                </StackPanel>

                <!-- Настройки обложек: Убираем GroupBox, оставляем StackPanel -->
                <StackPanel Margin="0,10,0,0">
                    <!-- Новый общий чекбокс -->
                    <CheckBox x:Name="EnableCoverArtCheckBox"
                              Content="Load album art"
                              IsChecked="{Binding Settings.EnableCoverArtFetching, Mode=TwoWay}"
                              Margin="0,5,0,0"/>

                    <!-- Новый ComboBox для выбора источника -->
                    <ComboBox x:Name="CoverArtSourceComboBox"
                              Width="330"
                              Margin="20,5,0,5" 
                              IsEnabled="{Binding IsChecked, ElementName=EnableCoverArtCheckBox}" 
                              SelectedValue="{Binding Settings.CoverArtSource, Mode=TwoWay}">
                        <ComboBox.ItemsSource>
                            <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                <sys:String>Deezer</sys:String>
                                <sys:String>Spotify (unavailable in Russia)</sys:String>
                            </x:Array>
                        </ComboBox.ItemsSource>
                    </ComboBox>
                    
                    <CheckBox x:Name="UseCustomCoverCheckBox" 
                              Content="Use custom default cover URL:"
                              IsChecked="{Binding Settings.UseCustomDefaultCover, Mode=TwoWay}" 
                              Margin="0,10,0,0"/>
                    <TextBox x:Name="CustomCoverUrlTextBox" 
                             Width="330"
                             Margin="20,0,0,5"
                             Text="{Binding Settings.CustomDefaultCoverUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding IsChecked, ElementName=UseCustomCoverCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Оборачиваем выбор сайтов в Expander -->
                <Expander x:Name="LinkButtonsExpander" Header="Select link buttons (max 2)" Margin="0,10,0,0">
                    <!-- Добавляем ScrollViewer -->
                    <ScrollViewer MaxHeight="75" VerticalScrollBarVisibility="Auto">
                        <!-- Используем UniformGrid вместо StackPanel -->
                        <UniformGrid Columns="2" Margin="5,0,0,0"> <!-- Убрал старый отступ StackPanel, добавил небольшой для UniformGrid -->
                            <!-- Убираем большие вертикальные отступы у чекбоксов, UniformGrid сам расставит -->
                            <CheckBox x:Name="SpotifyLinkCheckBox" Content="Spotify" Margin="5" Checked="LinkCheckBox_Changed" Unchecked="LinkCheckBox_Changed"/>
                            <CheckBox x:Name="YouTubeMusicLinkCheckBox" Content="YouTube Music" Margin="5" Checked="LinkCheckBox_Changed" Unchecked="LinkCheckBox_Changed"/>
                            <CheckBox x:Name="AppleMusicLinkCheckBox" Content="Apple Music" Margin="5" Checked="LinkCheckBox_Changed" Unchecked="LinkCheckBox_Changed"/>
                            <CheckBox x:Name="YandexMusicLinkCheckBox" Content="Yandex Music" Margin="5" Checked="LinkCheckBox_Changed" Unchecked="LinkCheckBox_Changed"/>
                            <CheckBox x:Name="DeezerLinkCheckBox" Content="Deezer" Margin="5" Checked="LinkCheckBox_Changed" Unchecked="LinkCheckBox_Changed"/>
                            <CheckBox x:Name="VkMusicLinkCheckBox" Content="VK Music" Margin="5" Checked="LinkCheckBox_Changed" Unchecked="LinkCheckBox_Changed"/>
                        </UniformGrid>
                    </ScrollViewer>
                </Expander>
            </StackPanel>

            <ui:TextBlock Grid.Row="2" x:Name="StatusTextBlock" Text="Initializing..." Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Style="{StaticResource CaptionTextBlockStyle}"/>
            
            <!-- Нижняя строка -->
            <Grid Grid.Row="3" Margin="0,5,0,5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <TextBlock Margin="5,0,10,0" VerticalAlignment="Center">
                        <Hyperlink Foreground="{DynamicResource TextFillColorSecondaryBrush}" Click="DevelopersHyperlink_Click">
                            Developers
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
                <TextBlock x:Name="VersionTextBlock" 
                           Text="v?.?.?" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Bottom" 
                           Margin="0,0,5,0" 
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                           Style="{StaticResource CaptionTextBlockStyle}"/>
            </Grid>
        </Grid>
       
    </DockPanel>
</ui:FluentWindow>
