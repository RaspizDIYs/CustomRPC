<ui:FluentWindow x:Class="CustomMediaRPC.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomMediaRPC"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="О разработчиках" 
        Height="180" Width="300"
        MinHeight="180" MinWidth="300"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner" 
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">
    <DockPanel>
        <ui:TitleBar DockPanel.Dock="Top"
                     Title="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type ui:FluentWindow}}}"
                     ShowMaximize="False"
                     ShowMinimize="False"
                     CloseWindowByDoubleClickOnIcon="True">
        </ui:TitleBar>
        <Grid Margin="0,10,0,10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Mejaikin" VerticalAlignment="Center"/>
                    <TextBlock FontWeight="Bold" FontSize="18" Margin="5">X</TextBlock>
                    <TextBlock Text="Spellov" VerticalAlignment="Center"/>
                </StackPanel>
                <ui:Button x:Name="DonateButtonAbout" 
                           Content="Поддержать"
                           Width="120" 
                           Click="DonateButtonAbout_Click" 
                           Icon="Heart24"
                           HorizontalAlignment="Center"
                           Appearance="Primary"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</ui:FluentWindow> 